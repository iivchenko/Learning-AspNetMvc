@model IEnumerable<MyTaskList.Models.TaskItem>

@{
    ViewBag.Title = "Tasks";
}

<h2>Tasks</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr><td><a href="/Home/Edit/@task.Id">@task.Name</a></td><td>(@task.Status)</td></tr>
        }
    </tbody>
</table>